{{! Detalles del art√≠culo }}
<div class="container">
    <div class="header">
        <a href="/items" class="back-link">&larr; Back to Items</a>
    </div>

    <div class="item-detail">
        <div class="item-detail__header">
            <h1 class="item-detail__title">{{item.name}}</h1>
            <div class="item-detail__price">${{item.getCurrentPrice}}</div>
            <div class="item-detail__meta">
                <span class="item-detail__bids">{{item.bidCount}} bids</span>
                {{#item.timeLeft}}<span class="item-detail__time">{{item.timeLeft}}</span>{{/item.timeLeft}}
            </div>
        </div>
        
        <div class="item-detail__description">
            {{item.description}}
        </div>

            <section class="bidding-section">
                <h2>Place Your Bid</h2>
                <form action="/items/{{item.id}}/bid" method="POST" class="bid-form">
                    <div class="form-group">
                        <label for="bidderName">Your Name:</label>
                        <input type="text" id="bidderName" name="bidderName" required
                               placeholder="Enter your full name"
                               aria-describedby="bidderNameHelp">
                        <small id="bidderNameHelp" class="form-help">This name will be visible to other bidders</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="bidAmount">Bid Amount ($):</label>
                        <div class="bid-amount-wrapper">
                            <span class="currency-symbol">$</span>
                            <input type="number" id="bidAmount" name="bidAmount" required
                                   min="{{item.minBid}}" step="0.01"
                                   placeholder="{{item.minBid}}"
                                   aria-describedby="bidAmountHelp">
                        </div>
                        <small id="bidAmountHelp" class="form-help">Minimum bid: ${{item.minBid}}</small>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="button bid-button">
                            Place Bid
                        </button>
                    </div>
                </form>
            </section>

            {{#item.recentBids}}
            <section class="bid-history">
                <h2>Recent Bids</h2>
                <div class="bid-list">
                    {{#.}}
                    <div class="bid-entry">
                        <span class="bidder">{{bidderName}}</span>
                        <span class="bid-amount">${{amount}}</span>
                        <span class="bid-time">{{timeAgo}}</span>
                    </div>
                    {{/.}}
                </div>
            </section>
            {{/item.recentBids}}
        </article>
    </div>
</div>