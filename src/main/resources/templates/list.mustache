{{! Lista de art√≠culos }}
<div class="container">
    <div class="header">
        <h1>Available Collectibles</h1>
        <p>Browse our unique collection of rare and valuable items</p>
        
        <div class="filter-section">
            <form id="price-filter-form" class="price-filter">
                <div class="price-inputs">
                    <div class="form-group">
                        <label for="minPrice">Min Price ($):</label>
                        <input type="number" id="minPrice" name="minPrice" min="0" step="0.01" value="{{minPrice}}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="maxPrice">Max Price ($):</label>
                        <input type="number" id="maxPrice" name="maxPrice" min="0" step="0.01" value="{{maxPrice}}" class="form-control">
                    </div>
                </div>
                <button type="submit" class="btn-filter">Apply Filter</button>
            </form>
        </div>
    </div>

    <div class="items-grid">
        {{#items}}
        <article class="item-card" data-item-id="{{id}}">
            <div class="item-card__content">
                <h2 class="item-card__title">{{name}}</h2>
                <p class="item-card__description">{{description}}</p>
                <div class="item-card__price">${{getCurrentPrice}}</div>
                <p class="item-card__bids">{{bidCount}} bids</p>
                <a href="/items/{{id}}" class="item-card__link">View Details</a>
            </div>
        </article>
        {{/items}}
        {{^items}}
        <div class="text-center mt-2">
            <h2>No items currently available</h2>
            <p class="mb-2">Check back soon for new additions to our collection!</p>
        </div>
        {{/items}}
    </div>
</div>