<section class="items-section">
    <div class="section-header">
        <h1>Available Collectibles</h1>
        <p class="section-description">Browse our unique collection of rare and valuable items</p>
    </div>

    <div class="items-grid">
        {{#items}}
        <article class="item-card">
            <div class="item-content">
                <h2 class="item-title">{{name}}</h2>
                <p class="item-description">{{description}}</p>
                <div class="item-meta">
                    <p class="price">Current Price: ${{getCurrentPrice}}</p>
                    <p class="bids-count">{{bidCount}} bids</p>
                </div>
                <a href="/items/{{id}}" class="button view-button">View Details</a>
            </div>
        </article>
        {{/items}}
        {{^items}}
        <div class="no-items">
            <p>No items currently available.</p>
            <p>Check back soon for new additions to our collection!</p>
        </div>
        {{/items}}
    </div>
</section>